{
  "extends": "@nouz/typescript-config/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      "@nouz/auth": ["../../packages/auth/src"],
      "@nouz/auth/*": ["../../packages/auth/src/*"],

      "@nouz/db": ["../../packages/db/src"],
      "@nouz/db/*": ["../../packages/db/src/*"],

      "@nouz/env/*": ["../../packages/env/src/*"],

      "@nouz/api": ["../../packages/api/src"],
      "@nouz/api/*": ["../../packages/api/src/*"],

      "@nouz/utils/*": ["../../packages/utils/src/*"],

      "@nouz/design-system/*": ["../../packages/design-system/src/*"],

      "@nouz/tailwind-config/*": ["../../packages/tailwind-config/src/*"],

      "@nouz/*": ["../../packages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "next.config.ts"
  ]
}
