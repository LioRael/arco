{
  "extends": "@nouz/typescript-config/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@nouz/*": ["../../packages/*"],
      "@config/*": ["../../packages/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "next.config.ts"
  ]
}
