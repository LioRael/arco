{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"],

      "@nouz/auth": ["../auth/src"],
      "@nouz/auth/*": ["../auth/src/*"],

      "@nouz/db": ["../db/src"],
      "@nouz/db/*": ["../db/src/*"],

      "@nouz/env/*": ["../env/src/*"],

      "@nouz/api": ["../api/src"],
      "@nouz/api/*": ["../api/src/*"],

      "@nouz/utils/*": ["../utils/src/*"],

      "@nouz/design-system/*": ["../design-system/src/*"]
    }
  }
}
