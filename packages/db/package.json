{
  "name": "@nouz/db",
  "version": "0.0.0",
  "private": true,
  "author": "LioRael",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    }
  },
  "scripts": {
    "db:check": "pnpm with-env drizzle-kit check",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:migrate:drop": "pnpm with-env drizzle-kit drop",
    "db:pull": "pnpm with-env drizzle-kit introspect",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "db:up": "pnpm with-env drizzle-kit up",
    "lint": "eslint . --max-warnings 0",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@nouz/env": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.1"
  },
  "devDependencies": {
    "@nouz/eslint": "workspace:*",
    "@nouz/tsconfig": "workspace:*",
    "@types/pg": "^8.11.10",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "^0.28.0",
    "pg": "catalog:"
  }
}
